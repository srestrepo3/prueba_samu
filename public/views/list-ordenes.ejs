<%- include('includes/adminlte') %>
<!-- Content Wrapper. Contains page content -->
<section class="content-header">
    <div class="container-fluid">
    <div class="row mb-2">
        <div class="col-sm-6">
        <h2>Listado Total de Ordenes</h1>
        </div>
        <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active">Listado de Ordenes</li>
        </ol>
        </div>
    </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Listado total de Ordenes</h3>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <table id="example2" class="table table-bordered table-hover">
              <thead>
              <tr>
                <th>Id</th>
                <th>usuario</th>
                <th>Total orden</th>
                <th>estado</th>
                <th>Fecha</th>
                <th>Acciones</th>
              </tr>
              </thead>
              <tbody>
                <% ordenes.forEach(orden => {  %>
              <tr>
                <td><%= orden.id %></td>
                <td><%= orden.user_nom %> <%= orden.user_ape%></td>
                <td><%= orden.total.toLocaleString('es-CO') %></td>
                <td><%= orden.estado %></td>
                <td><%= new Date(orden.created_at).toLocaleString('es-CO', {year: 'numeric', month: 'long', day: 'numeric'}) %></td>
               <td></td>                 
               </tr>
              <% }); %>
              </tbody>
              <tfoot>
              <tr>
                <th>Id</th>
                <th>usuario</th>
                <th>Total orden</th>
                <th>estado</th>
                <th>Fecha</th>
                <th>Acciones</th>
              </tr>
              </tfoot>
            </table>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->

      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </section>
  <!-- /.content -->

<%- include('includes/adminfoot') %>